<%# --------------------- %>

<div class="row">


    <h1><%= @feed.channel.title %></h1>




    <ul class="list-unstyled">

        <div class="grid-2">
      <% @feed.items.first(8).each do |item| %>
          <div class="text-white mb-3 px-3 py-3 rounded-4 shadow-sm pe-4" id="actu-card">
            <li class="mb-3">
              <p><small><em><%= item.pubDate.strftime('%d-%m-%Y %X') %></em></small></p>
              <h5><%= item.title %></h5>
              <hr>
              <p id="actu-description"><%= item.description %></p>

              <%= link_to "En savoir plus", item.link, class: "text-decoration-none text-white",target: '_blank', class:"btn btn-outline-light" %>
            </li>
          </div>
        <% end %>
        </div>

    </ul>

  </div>
